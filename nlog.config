<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets>
    <target name="Console" xsi:type="Console" layout="${longdate}|${level:uppercase=true}|${logger}|${message}"/>
    <target name="Trace" xsi:type="Trace" layout="${longdate}|${level:uppercase=true}|${logger}|${message}" />
  </targets>

  <rules>
    <logger name="SlimMessageBus.Host" minlevel="Debug" writeTo="Console" />
    <logger name="SlimMessageBus.Host" minlevel="Debug" writeTo="Trace" />
    <logger name="*" minlevel="Info" writeTo="Console" />
    <logger name="*" minlevel="Info" writeTo="Trace" />
  </rules>
</nlog>